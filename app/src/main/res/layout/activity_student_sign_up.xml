<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StudentSignUp">
    <androidx.cardview.widget.CardView
        android:layout_width="366dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422"
        app:cardBackgroundColor="#36D3B4B4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Teacher_Firstname_Input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:textSize="18dp"
                        android:inputType="text"
                        android:textStyle="italic"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Teacher_LastnameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Teacher_EmailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" Email ID"
                        android:inputType="textEmailAddress"
                        android:drawablePadding="10dp"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Teacher_PhoneInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" Phone Number"
                        android:inputType="textEmailAddress"
                        android:drawablePadding="10dp"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:passwordToggleEnabled="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Teacher_PasswordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:hint="Password"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        />
                </com.google.android.material.textfield.TextInputLayout> <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:passwordToggleEnabled="true"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Teacher_ConfirmPasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:hint="Confirm Password"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    app:passwordToggleEnabled="true"

                    />
            </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button_TeacherRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Register"
                    android:backgroundTint="@color/blueish"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_app_registration_24"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>